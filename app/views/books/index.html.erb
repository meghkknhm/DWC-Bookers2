<div class="container">  <!-- この行を追加 -->
  <div class="row">

    <div class="col-xs-3" >
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
    	        <th>name</th>
    	        <th><%= @user.name %></th>
            </tr>
            <tr>
    	        <th>introduction</th>
    	        <th><%= @user.introduction %></th>
            </tr>
　　　    </tbody>
　　    </table>
　　  <% if @user.id == current_user.id %>
        <%= link_to edit_user_path(@user)do %>
          <p class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></p>
        <% end %>
      <% end %>

      <h1>New book</h1>
      <!-- form_with部分 -->
      <%= form_with model:@book, local:true do |f| %>

      <h4>Title</h4>
        <%= f.text_field :title , class:"col-xs-12"%>

      <h4>Opinion</h4>
        <%= f.text_area :body , class:"col-xs-12"%>

        <%= f.submit 'Create Book' %>

      <% end %>
      </div>

    <div class="col-xs-9" >
    <h1>Books</h1>
      <table class="table table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= attachment_image_tag @user.id), :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>  <!-- この行を追加 -->
</div>