<div class="container">  <!-- この行を追加 -->
<div class="row">

<div class="col-xs-3" >
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
    	        <th>name</th>
    	        <th><%= @user.name %></th>
            </tr>
            <tr>
    	        <th>introduction</th>
    	        <th><%= @user.introduction %></th>
            </tr>
　　　    </tbody>
　　    </table>
　　  <% if @user.id == current_user.id %>
        <%= link_to edit_user_path(@user)do %>
          <p class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></p>
        <% end %>
      <% end %>

      <h1>New book</h1>
      <!-- form_with部分 -->
      <%= form_with model:@book, local:true do |f| %>

      <h4>Title</h4>
        <%= f.text_field :title %>

      <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>

      <% end %>
      </div>







<div class="col-xs-9" >
  <h1>Books detail</h1>
  <table class="table">
    <tbody>
      <tr>
        <td>
          <%= @book.title %>
        </td>
        <td>
          <%= @book.body %>
        </td>
        <td>
          <%= link_to "Edit", edit_book_path(@book.id) %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
        </td>

      </tr>
    </tbody>
  </table>
</div>
